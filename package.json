{
  "name": "hcs-skills",
  "version": "0.0.0",
  "description": "Publish and subscribe to skills on Hedera Consensus Service (HCS)",
  "main": "index.js",
  "scripts": {
    "dev": "npm run client-build && npm run client-static && npm run server-watch",
    "client-build": "vue-cli-service build --dest ./dist/ --formats 'umd' --target lib --name dapp front/dapp.js",
    "client-static": "cp -r ./front/static/* ./dist/",
    "server": "node ./back/server-run.js",
    "server-watch": "node-dev -- ./back/server-run.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hedera-dev/hcs-skills.git"
  },
  "keywords": [
    "hcs",
    "hedera",
    "pubsub"
  ],
  "author": "bguiz",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hedera-dev/hcs-skills/issues"
  },
  "homepage": "https://github.com/hedera-dev/hcs-skills#readme",
  "dependencies": {
    "@hashgraph/sdk": "2.42.0",
    "ajv": "8.12.0",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "crypto": "npm:crypto-browserify",
    "crypto-browserify": "3.12.0",
    "dotenv": "16.4.5",
    "express": "4.18.3",
    "safe-stable-stringify": "2.4.3",
    "socket.io": "4.7.5",
    "stream": "npm:stream-browserify",
    "stream-browserify": "3.0.0"
  },
  "devDependencies": {
    "@vue/cli": "5.0.8",
    "@vue/cli-plugin-babel": "5.0.8",
    "@vue/cli-service": "5.0.8",
    "node-dev": "8.0.0",
    "supertest": "6.3.4"
  }
}
